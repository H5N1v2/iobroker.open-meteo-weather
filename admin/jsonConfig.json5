{
  "i18n": true,
  "type": "tabs",
  "items": {
    "main": {
      "type": "panel",
      "label": "settings_label",
      "items": {
        // --- HEADER BEREICH ---
        "headerPanel": {
          "type": "panel",
          "sm": 12,
          "items": {
            "icontest": {
              "type": "staticImage",
              "src": "open-meteo.png",
              "xs": 12, "sm": 3, "md": 2, "lg": 2
            },
            "descriptionText": {
              "type": "staticText",
              "text": "descriptionText_text",
              "style": { 
                "fontStyle": "italic",
                "fontSize": "20px",
                "fontWeight": "bold"
             },
              "xs": 12, "sm": 9, "md": 10, "lg": 10
            }
          }
        },

        // --- STANDORT BEREICH ---
        "locationLabel": {
          "type": "header",
          "text": "location_header_text",
          "size": 5,
          "xs": 12
        },
        "locations": {
          "type": "table",
          "sm": 12,
          "label": "locations_label",
          "help": "locations_help",
          "items": [
            {
              "type": "text",
              "attr": "name",
              "label": "location_name_label",
              "width": "200px"
            },
            {
              "type": "number",
              "attr": "latitude",
              "label": "latitude_label",
              "width": "120px"
            },
            {
              "type": "number",
              "attr": "longitude",
              "label": "longitude_label",
              "width": "120px"
            },
            {
              "type": "text",
              "attr": "timezone",
              "label": "timezone_label",
              "default": "Europe/Berlin",
              "width": "150px"
            }
          ]
        },
        "meteoredURL": {
          "type": "staticLink",
          "text": "koordinates_text",
          "href": "https://www.openstreetmap.org",
          "button": true,
          "color": "primary",
          "xs": 12, "sm": 12, "md": 6, "lg": 4,
          "newLine": true,
          "style": {
            "marginTop": "20px",
            "marginBottom": "20px",
            "fontWeight": "bold",
            "border": "2px solid #f3d421"
          }
        },

        "divider1": { "type": "divider", "xs": 12 },

        // --- OPTIONEN BEREICH ---
        "options_header": {
          "type": "header",
          "text": "options_header_text",
          "size": 5,
          "xs": 12
        },
        "updateInterval": {
          "type": "select",
          "label": "interval_label",
          "default": 30,
          "options": [
            { "value": 15, "label": "interval_15_min" },
            { "value": 30, "label": "interval_30_min" },
            { "value": 60, "label": "interval_60_min" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 3
        },
        "forecastDays": {
          "type": "select",
          "label": "forecastDays_label",
          "default": 1,
          "options": [
            { "value": 1, "label": "days_1" },
            { "value": 3, "label": "days_3" },
            { "value": 7, "label": "days_7" },
            { "value": 14, "label": "days_14" },
            { "value": 16, "label": "days_16" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 3
        },
        "isImperial": {
            "type": "select",
            "label": "unit_system_label",
            "default": false,
            "options": [
                { "value": false, "label": "metric_label" },
                { "value": true, "label": "imperial_label" }
            ],
            "xs": 12, "sm": 6, "md": 4, "lg": 3
        },

        "divider2": { "type": "divider", "xs": 12 },

        // --- STÜNDLICHE VORHERSAGE ---
        "forecastHoursEnabled": {
          "type": "checkbox",
          "label": "forecastHoursEnabled_label",
          "help": "forecastHoursEnabled_help",
          "default": false,
          "xs": 12, "sm": 6, "md": 4, "lg": 3
        },
        "forecastHours": {
          "type": "select",
          "label": "forecastHours_label",
          "default": 1,
          "options": [
            { "value": 1, "label": "Hours_1" },
            { "value": 6, "label": "Hours_6" },
            { "value": 12, "label": "Hours_12" },
            { "value": 24, "label": "Hours_24" }
          ],
          "xs": 12, "sm": 6, "md": 4, "lg": 3,
          "hidden": "!data.forecastHoursEnabled"
        },

        "divider3": { "type": "divider", "xs": 12, "hidden": "!data.airQualityEnabled" },

        // --- LUFTQUALITÄT ---
        "airQualityEnabled": {
          "type": "checkbox",
          "label": "airQualityEnabled_label",
          "default": false,
          "xs": 12, "sm": 6, "md": 4, "lg": 3,
          "newLine": true
        },
        "airQualityHint": {
          "type": "staticText",
          "text": "airQualityHint_text",
          "xs": 12, "sm": 6, "md": 8, "lg": 9,
          "hidden": "!data.airQualityEnabled",
          "style": { "color": "grey", "paddingTop": "15px" }
        }
      }
    }
  }
}